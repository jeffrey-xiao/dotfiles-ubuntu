## Formatting
# song_list_format = "$8 {%l}$8 | $7{%30a} $7| $6{{%t}|{%f}} $R $(59){%40b}"
song_list_format = "$8 {%l}$8 | $7{%a} $8»$6 {{%t}|{%f}} $R $(59){%b}"
song_status_format = {%a - }{%b - }{{%t}|{%f}}
song_library_format = {%t}|{%f}

now_playing_prefix = $b
now_playing_suffix = $/b

selected_item_prefix = $6
selected_item_suffix = $9
modified_item_prefix = $3> $9

song_window_title_format = {%a - }{{%t}|{%f}}
song_columns_list_format = (5f)[white]{l} (30)[cyan]{a} (50)[magenta]{t|f:Title} (10)[yellow]{b}

## Update i3blocks music block
